<div class="max-w-screen-xl px-4 mx-auto sm:px-6">


  <div class="md:flex space-y-8 md:space-y-0 <%= reverse_image? %>">
    <div class="flex flex-col px-4 pt-10 space-y-2 md:w-1/2 md:px-0">
      <h4 class="text-2xl font-bold"><%= resource.title %></h4>
      <p><%= resource.content.html_safe %></p>
    </div>
    <div class="md:w-1/2">
      <img class="aspect-square" src="<%= resource.image.url %>?auto=compress,format&fit=crop&w=720&h=720&fp-x=<%= resource.image.focal_point&.dig("x") %>&fp-y=<%= resource.image.focal_point&.dig("y") %>"/>
    </div>
  </div>
</div>
