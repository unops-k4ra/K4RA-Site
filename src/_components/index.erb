


<div class="relative pt-4 w-full lg:aspect-[9/5] flex flex-col justify-center items-center bg-gray-600" >

  <% dato.home.hero.tap do |image| %>
    <picture class="absolute inset-y-0 h-full min-w-full">
      <source media="(min-width: 1024px)" srcset="<%= image.url %>?auto=compress,format&fit=crop&w=1440&h=800&fp-x=<%= image.focal_point&.dig("x") %>&fp-y=<%= image.focal_point&.dig("y") %>">
      <source media="(min-width: 640px)" srcset="<%= image.url %>?auto=compress,format&fit=crop&w=1024&h=569&fp-x=<%= image.focal_point&.dig("x") %>&fp-y=<%= image.focal_point&.dig("y") %>">
      <source media="(min-width: 399px)" srcset="<%= image.url %>?auto=compress,format&fit=crop&w=800&h=440&fp-x=<%= image.focal_point&.dig("x") %>&fp-y=<%= image.focal_point&.dig("y") %>">
      <source media="(max-width: 400px)" srcset="<%= image.url %>?auto=compress,format&fit=crop&w=400&h=267&fp-x=<%= image.focal_point&.dig("x") %>&fp-y=<%= image.focal_point&.dig("y") %>">
      <img src="<%= image.url %>?auto=compress,format&fit=crop&w=1024&h=569&fp-x=<%= image.focal_point&.dig("x") %>&fp-y=<%= image.focal_point&.dig("y") %>" alt="">
    </picture>
  <% end %>

  <div class="absolute inset-x-0 top-0">
    <%= render Shared::Navbar.new(metadata: metadata, resource: resource, inverse: true) %>
  </div>

  <div class="relative z-10 w-full max-w-screen-xl px-4 mx-auto my-12 space-y-10 sm:px-6" >
    <h1 class="max-w-[780px]"><%= svg "/images/logo.svg", class: "w-full h-auto text-white" %></h1>
    <div class="max-w-[400px] text-xl leading-normal text-white "> <%= dato.home.abstract %></div>
    <div>
      <a href="<%= relative_url "/about" %>" class="px-4 py-2 text-white rounded bg-kra-button"> Learn More </a>
    </div>
    <div class="flex justify-start max-w-md pt-4 -mx-4 pr8">
      <% dato.global.inverse_logos.each do |image| %>
        <div class="px-4 grow-0 shrink" style="aspect-ratio:<%= image.width %> / <%= image.height %>">
          <img src="<%= image.url %>"  />
        </div>
      <% end %>
    </div>
  </div>

  <div class="absolute inset-x-0 bottom-0 z-0 flex justify-end">
    <%= svg "/images/kra_icon.svg", class: "w-1/3 h-full aspect-square" %>
  </div>
  <div class="absolute inset-x-0 bottom-0 flex items-end justify-center h-10 pb-6">
    <a href="#next">
      <%= svg "/images/chevron.svg", class: "text-white" %>
    </a>
  </div>
</div>

<div id="next"></div>
<div class="grid gap-16 grid-col-1">
  <% dato.home.content.each do |content| %>
    <%= render component_from_dato(content) %>
  <% end %>
</div>
