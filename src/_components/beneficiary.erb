<div class="relative  <%= height %> bg-cover z-30 overflow-hidden"
     style="background-image: url('<%= relative_url resource.hero&.url %>')">

   <div class="grid grid-cols-7 lg:grid-cols-12 gap-0 h-full">
     <div class="col-span-1 bg-kra-blue"></div>
     <div class="col-span-4 h-full text-left bg-kra-blue pt-16">
         <h1 class="text-7xl text-white text-left w-full font-display"> <%= resource.title %> </h1>
         <% if resource.abstract.present? %>
           <hr class="border-none w-[68px] h-2 bg-kra-blue-100 my-6"/>
           <p class="text-white text-2xl"> <%= resource.abstract %> <p>
         <% end %>
    </div>
    <div class="col-span-1 -ml-1 z-0">
      <svg class="w-auto h-full " viewBox="0 0 95 432" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M95 199.223C95 125.141 70.4388 56.5736 28.7166 0.632818L0.410003 0.63282L0.409454 431.133C59.1133 370.261 95 288.77 95 199.223Z" fill="#0092D1"/>
      </svg>
    </div>
  </div>
</div>

<div class="sm:grid sm:grid-cols-12 gap-0 max-w-screen-xl mx-auto">
  <div class="px-8 sm:px-0 sm:col-start-2 sm:col-span-5 md:col-start-2 md:col-span-6 lg:col-start-2 lg:col-span-7 xl:col-start-1 xl:col-span-8">
    <div class="mt-8 pb-4 mb-16 border-b flex">
      <div class="font-bold">Beneficiaries</div>
      <!-- this span should be an svg to match the design -->
      <span class="mx-4 text-kra-blue">&gt;</span>
      <span class="text-kra-darkblue-lighter"><%= resource.title %></span>
    </div>
    <div class="max-w-full prose">
      <% resource.content.each do |content| %>
        <%= render component_from_dato(content, {page: resource}) %>
      <% end %>
    </div>
  </div>
  <div class="sm:col-start-8 sm:col-span-5 md:col-start-9 md:col-span-4 lg:col-start-10 lg:col-span-3 sm:border-l border-t sm:border-t-0">
    <div class="mt-8 pb-4 px-6 border-b flex">
      <div class="font-bold">Resources on this page</div>
    </div>
    <% resource.resources.each do |res| %>
      <a class="flex border-b text-sm group hover:bg-kra-darkblue-lightest" href="<%= relative_url "/resources/#{res.slug}" %>">
        <div class="flex grow">
          <div class="grow space-y-2 py-4 px-6">
            <span>
              <%= res.title %>
            </span>
            <div class="flex space-x-2">
              <% res.beneficiary.each do |beneficiary| %>
                <span class="px-2 py-1 rounded border border-kra-darkblue-lightest group-hover:border-kra-darkblue-light bg-kra-darkblue-lightest text-xs text-kra-darkblue-light">
                  <%= beneficiary.iso3_code%>
                </span>
              <% end %>
              <span>
                <%= render resource_type(res)%>
              </span>
            </div>
          </div>
          <div class="flex">
            <div class="px-4 place-self-center group-hover:translate-x-2 transition-transform">
            <%= svg "/images/arrow.svg", class:"h-4 w-4  " %>
            </div>
          </div>
        </div>
      </a>
    <% end %>
  </div>
</div>
