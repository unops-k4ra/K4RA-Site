<div class="grid grid-cols-12 gap-0">
  <div class="col-start-2 col-span-7">
    <div class="mt-8 pb-4 mb-6 border-b flex">
      <div class="text-lg font-bold border-b-2 pb-2">EU Acquis</div>
      <!-- this span should be an svg to match the design -->
      <span class="mx-4 text-kra-blue">&gt;</span>
      <span class="text-kra-darkblue-lighter">Chapter <%= resource.chapter_number%></span>
    </div>
    <div class="prose max-w-full ">
      <% resource.content.each do |content| %>
        <%= render component_from_dato(content, {page: resource}) %>
      <% end %>
    </div>
  </div>
  <div class="col-start-10 col-span-3 border-l-2">
    <div class="m-4 text-xl font-bold">
    Resources on this page
    </div>

    <div class="flex items-center justify-between border-y p-4">
      <div>
        <% resource.resources.each do |res| %>
          <div class="flex flex-col space-y-2">
            <span>
              <%= res.title %>
            </span>
            <div class="flex space-x-2">
              <% res.beneficiary.each do |beneficiary| %>
                <span class="rounded px-2 py-1 text-sm bg-kra-darkblue-lightest text-kra-darkblue-light">
                  <%= beneficiary.iso3_code%>
                </span>
              <% end %>
              <span>
                <%= render resource_type(res)%>
              </span>
            </div>
          </div>
        <% end %>
      </div>
      <div class="flex">
        <%= svg "/images/arrow.svg", class:"h-4 w-4 text-kra-darkblue-lighter" %>
      </div>
    </div>

  </div>
</div>
